.div.span9.well
  -if current_user.created_post?(post.id)
    =link_to thread_post_path(post.discussion, post), method: :delete, data: { confirm: "Are you sure?" },  class:'remove-link-color' do
      %span.glyphicon.glyphicon-remove.pull-right
  
  %h3
    =post.title
    - if page == 'portal' || page == 'user_profile'
      %small in 
      =link_to thread_path post.discussion do
        %small #{ post.discussion.name }
  -#%span in
  
  %div
    -if page =='user_profile'
      %span #{ post.user.name }
    -else
      =link_to post.user.name, user_path(post.user)
    %span, on  #{ clean_time(post.created_at) }
  %br
  %p.lead #{post.body_html}
  -if post.body
    %br
    %br
  -unless page == 'user_profile'
    .list-group
      -post.comments.each do |comment| 
        .list-group-item 
          -if current_user.created_comment?(comment.id)
            =link_to thread_post_comment_path(post.discussion, post, comment), method: :delete, data: { confirm: "Are you sure?" },  class:'remove-link-color' do
              %span.glyphicon.glyphicon-remove.pull-right
          =link_to comment.user.name
          %span.list-group-item-text #{comment.body_html} 
          %div
            %small #{time_ago_in_words comment.created_at }
    = bootstrap_form_for @comment, url: thread_post_comments_path( post.discussion, post, @comment) do |f|
      -f.text_area :body, placeholder:"enter comment here" , hide_label: true, :autocomplete => :off, class: 'comment-box'

%script
  $(document).ready(function() { $('.comment-box').autoGrow().shiftenter({hint: ""}); });
