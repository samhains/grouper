.container
  %section.container
    %header

  %section.container.row
    .container
      .col-md-8
        =render @posts, portal: true

      .col-md-4.well
        .header
          %h2 MY GROUPS
        -@groups.each do |group|
          .span8
            =link_to group_path(group) do
              %h4 #{ group.name }
              %small #{ group.description }
