%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_for(@user, url: user_edit_path) do |f|
        %header
          %h1 Edit Profile
        %br
        =f.text_field :username
        =f.text_field :name
        =f.text_area :bio
        =f.time_zone_select :time_zone, ActiveSupport::TimeZone.all, default: Time.zone.name
        =f.submit "Update"

