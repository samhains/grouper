=link_to notification.creator.name, user_path(notification.creator)
-if notification.type == Like
  -if notification.liked_class == Post
    %span liked your
    -unless notification.post_title?
      %span Post,
      =link_to notification.post.title,
        post_path(notification.post)
    -else
      =link_to notification.liked_class, 
        post_path(notification.post)
    %span, #{ time_ago_in_words notification.created_at } ago
    %br
    %br
  -elsif notification.liked_class == Comment
    %span liked your Comment on
    -unless notification.post_title?
      %span Post,
      =link_to notification.post.title, 
        post_path(notification.post)
    -else
      =link_to notification.post.class,
        post_path(notification.post)
    %span, #{ time_ago_in_words notification.created_at } ago
    %br
    %br

  .panel.panel-default
    .panel-body
      =notification.liked_content
-if notification.type == Post
  %span posted in 
  =link_to notification.discussion.name, 
    thread_path(notification.discussion)
  %span, #{ time_ago_in_words notification.created_at } ago
  %br
  %br
  .panel.panel-default
    .panel-body 
      =notification.text

-if notification.type == Comment
  %span commented on
  -unless notification.post_title?
    %span your Post,
    =link_to notification.post.title, post_path(notification.post)
  -else
    %span your
    =link_to notification.post.class, post_path(notification.post)
  %span, #{ time_ago_in_words notification.created_at } ago
  %br
  %br
  .panel.panel-default
    .panel-body 
      =notification.text

