.section.container
  .row
    .col-lg-2
    .col-lg-8

      %h1
        .row
          .col-md-10
            Sent
            =link_to inbox_path do
              %small Inbox
          .col-md-2
            =link_to new_message_path do
              %button.btn.btn-default.pull-right.button-top-padding
                %span.glyphicon.glyphicon-plus 
                  New Message
      %br
      =render 'messages/message_table', messages: @messages, placeholder: "Sent"
      =link_to_previous_page @messages_paginated, 'Previous', class: 'pull-right'
      =link_to_next_page @messages_paginated, 'Next', class: 'pull-right' 
    .col-lg-2
