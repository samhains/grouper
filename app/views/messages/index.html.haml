.section.container
  .row
    .col-lg-2
    .col-lg-8

      %h1
        .row
          .col-md-10
            Inbox
          .col-md-2
            =link_to new_message_path do
              %button.btn.btn-default.pull-right.button-top-padding
                %span.glyphicon.glyphicon-plus 
                  New Message
      %br
      %table.table
        %thead
          %tr
            %th Subject
            %th From:
            %th Received at:
        %tbody
          -@inbox_messages.each do |message|
            %tr.well
              %td
                =link_to message.subject, message_path(message), class: 'black-link'
              %td 
                =link_to "#{message.author.name} (#{message.author.username})", message_path(message), class:'black-link'
              %td 
                = clean_time message.created_at
    .col-lg-2
